.padding16{padding: 0 32rpx;}
.font_14 {
	font-size: 28rpx;
}
.color_333 {
	color: #333;
}
.color_666 {
	color: #666;
}
.color_999 {
	color: #999;
}
view, text {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

/* 遮罩 */

.zhezhao {
  width: 100%;
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  background-color: rgba(51, 51, 51, 0.7);
  /* z-index: 999; */
}

.main {
  width: 100%;
  min-height: 840rpx;
  background-color: #fff;
  position: fixed;
  left: 0;
  bottom: 0;
  border-radius: 16rpx 16rpx 0px 0px;
}

.sku_prompt_content {
  position: fixed;
	min-height: 840rpx;
  z-index: 1003;
  background-color: #fff;
  width: 100%;
  overflow: visible;
  height: auto;
  border-radius: 16rpx 16rpx 0px 0px;
	display: flex;
	flex-direction: column;
	justify-content: space-between;
	align-items: center;
}

.sku_prompt_top {
  padding: 40rpx 28rpx 0 48rpx;
	width: 100%;
}

.bottom {
	width: 100%;
}

.sku_top_right {
  padding-left: 40rpx;
}

.box_proimg_container image {
  width: 192rpx;
  height: 192rpx;
}

.btn_sku {
  display: inline-block;
  text-align: center;
  line-height: 56rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  padding: 0 20rpx;
  height: 56rpx;
  border-radius: 30rpx;
  border: 2rpx solid rgba(216, 216, 216, 1);
  font-size: 24rpx;
}

.actived_btn_sku {
  color: #ff5541;
  border-color: #ff5541;
  background: rgba(205, 168, 110, 0.2);
}

.btn_add, .btn_jian {
  display: inline-block;
  font-size: 50rpx;
  color: #ff5541;
}

.btn_add_jian_nomore {
  color: #dcdcdc;
}

.buy_counts {
  width: 140rpx;
  text-align: center;
  font-size: 28rpx;
  color: #4a4a4a;
}

.btn_addCart, .btn_buy {
  height: 70rpx;
  line-height: 68rpx;
  border-radius: 36rpx;
  color: #ff5541;
  border: 2rpx solid #ff5541;
  box-sizing: border-box;
  width: 100%;
  text-align: center;
}

.btn_buy {
  box-shadow: 0px 5px 10px #cfcfcf;
  background: rgba(205, 168, 110, 1);
  color: #fff;
}

.old_price {
	font-size: 22rpx;
	background:linear-gradient(270deg,rgba(254,51,75,1) 0%,rgba(255,114,130,1) 100%);
	border-radius:8rpx;
	color: #fff;
	padding: 0 6rpx;
	margin-left: 6rpx;
}
.new_price, .new_price_container {
	color:#FE334B;
	font-size: 28rpx;
	font-weight: 600;
}
.gradient {
	background:linear-gradient(270deg,rgba(254,51,75,1) 0%,rgba(255,114,130,1) 100%) !important;
}

.transition_ease_in_out {
	transition: all .3s ease-out;
}