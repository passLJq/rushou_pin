/* pages/coupon/coupon.wxss */
@import "../../common/iconfont.wxss";
view, text {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

.otherBlock {
	width: 100%;
	padding: 0 30rpx;
}

.otherBlock .title {
	width: 100%;
	padding: 24rpx 0;
	font-size:34rpx;
	font-weight:600;
	color:rgba(51,51,51,1);
}

.otherBlock .title text {
	font-size: 24rpx; 
	color: #999;
	margin-left: 30rpx;
}

.otherItem {
	width: 100%;
	border-top: 2rpx solid #f6f6fa;
	padding: 28rpx 0 20rpx;
	display: flex;
}

.otherItem image {
	width: 200rpx;
	height: 200rpx;
}

.detail {
	width: 454rpx;
	margin-left: 20rpx;

}
.detail > text {
	font-size: 30rpx;
	overflow: hidden;text-overflow: ellipsis;display: -webkit-box;-webkit-line-clamp: 2;-webkit-box-orient: vertical;
}
.detail .p1 {
	font-size: 20rpx;
	color: #fff;
	padding: 0 10rpx;
	line-height: 28rpx;
	background:linear-gradient(270deg,rgba(254,51,75,1) 0%,rgba(255,114,130,1) 100%);
	border-radius:16rpx;

}

.headimg {
	width: 100%;
	height: 64rpx;
	display: flex;
	justify-content: space-between;
	align-items: center;
	margin-top: 20rpx;
	/* position: relative; */
}

.flexEnd {
	justify-content: flex-end;
}

.headimg > view {
	display: flex;
}

.headimg image {
	width: 64rpx;
	height: 64rpx;
	border-radius: 50%;
	border:2rpx solid rgba(255,255,255,1);
	/* margin-left: -15rpx; */
}

.headimg image + image {
	margin-left: -20rpx;
}

.headimg > text {
	font-size: 24rpx;
	/* height: 44rpx; */
	color: #999;
	margin-right: 10rpx;
	/* position: absolute; */
	/* right: 5rpx; */
}

.otherItem .bottom {
	width: 100%;
	display: flex;
	justify-content: space-between;
	
}

.otherItem .pr {
	display: flex;
	align-items: center;
	margin-top: 36rpx;
}

.otherItem .pr text:nth-child(1) {
	font-size:36rpx;
	font-weight:600;
	color:rgba(254,51,75,1);
}
.otherItem .pr text:nth-child(2) {
	font-size: 24rpx;
	color: #999;
	margin-left: 14rpx;
	white-space: nowrap;
}

.otherItem .bottom .btn {
	background:linear-gradient(270deg,rgba(254,51,75,1) 0%,rgba(255,114,130,1) 100%);
	border-radius:35rpx;
	font-size:28rpx;
	font-weight:600;
	color:rgba(255,255,255,1);
	line-height:58rpx;
	width: 170rpx;
	text-align: center;
	/* padding: 0 54rpx; */
	height: 58rpx;
	margin-top: 20rpx;
}

.nodata {
	width: 100%;
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
}

.nodata image {
	width: 400rpx;
}

.nodata text {
	font-size: 24rpx;
	color: #999;
}