/* pages/team_detail/team_detail.wxss */

page {
  background-color: #f6f6fa;
  font-size: 28rpx;
  font-family: PingFangSC-Regular;
}

/* 个人信息头部 */

.user_msg_container {
  width: 100%;
  height: 220rpx;
  background-color: #fff;
  padding: 42rpx 30rpx 34rpx;
}

.user_img_box {
  width: 144rpx;
  height: 144rpx;
  margin-right: 24rpx;
}

.user_img_box image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.user_names {
  font-weight: 400;
}

.user_shop_type {
  width: 120rpx;
  height: 36rpx;
  background: linear-gradient(270deg, rgba(232, 55, 74, 1) 0%, rgba(253, 94, 67, 1) 100%);
  border-radius: 18rpx;
  font-size: 20rpx;
  font-weight: 600;
  color: rgba(255, 255, 255, 1);
  text-align: center;
  margin-left: 18rpx;
}

.user_right_bottom {
  height: 34rpx;
}

.user_right_bottom > view {
  height: 34rpx;
  line-height: 34rpx;
}

.bottom_content_container {
  background-color: #fff;
  padding: 0 30rpx;
}
  .bottom_content_container>view {
    border-top: 1px solid #f6f6fa;
    width: 100%;
    height: 96rpx;
  }
.bottom_content_container image {
    width: 36rpx;
    height: 36rpx;
    margin-right: 10rpx;
  }