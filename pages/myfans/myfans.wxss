@import "../../common/iconfont.wxss";
@import "../../common/font-awesome.wxss";

view, text, input {
	margin: 0;
	padding: 0;
	box-sizing: border-box;
}

.search {
	width: 100%;
	padding: 16rpx 0 16rpx 30rpx;
	background-color: #fff;
	display: flex;
	align-items: center;
	position: relative;
}

.seahold {
	font-size: 24rpx;
	color: #999;
}

.search input {
	width: 600rpx;
	height: 58rpx;
	padding-left: 58rpx;
	background-color: #f6f8fa;
	border-radius: 8rpx;
	font-size: 24rpx;
	color: #333;
	display: flex;
	align-items: center;
}

.search text {
	font-size: 28rpx;
	color: #999;
	position: absolute;
	top: 50%;
	transform: translateY(-50%);
	left: 50rpx;
}

.search view {
	height: 58rpx;
	/* display: flex;
	justify-content: center;
	align-items: center; */
	line-height: 58rpx;
	padding: 0 30rpx;
	font-size: 24rpx;
	color: #333;
}

.myTeam {
	width: 100%;
	height: 88rpx;
	background-color: #fff;
	display: flex;
	justify-content: space-between;
	align-items: center;
	padding: 0 32rpx;
}

.myTeam text {
	font-size: 28rpx;
	color: #333;
}

.tab {
	width: 100%;
	display: flex;
	position: relative;
	background-color: #fff;
	margin: 20rpx 0 10rpx 0;
}

.tabs {
	width: 50%;
	height: 88rpx;
	display: flex;
	justify-content: center;
	align-items: center;
	font-size: 28rpx;
	color: #333;
}

.tabs.select {
	color: #FE334B;
}

.tab .bottomBar {
	width:80rpx;
	height:8rpx;
	background:rgba(254,51,75,1);
	border-radius:4rpx;
	position: absolute;
	bottom: 0rpx;
	transform: translateX(-50%);
	transition: all .3s ease-out;
}

swiper-item {
	overflow-y: scroll;
}

::-webkit-scrollbar {
	display: none;
}

.teamitem {
	width: 750rpx;
	padding: 32rpx 30rpx;
	background-color: #fff;
	margin-bottom: 2rpx;
	display: flex;
	align-items: center;
	justify-content: space-between;
}

.teamitem image {
	width: 96rpx;
	height: 96rpx;
	border-radius: 50%;
}

.teamitem .itemmsg {
	display: flex;
	align-items: center;
	/* height: 90rpx; */
}

.teamitem .itemmsg view {
	display: flex;
	flex-direction: column;
	margin-left: 30rpx;
}

.teamitem .itemmsg view text:nth-child(1) {
	font-size: 28rpx;
	color: #333;
	margin-bottom: 20rpx;
}

.teamitem .itemmsg view text:nth-child(2) {
	font-size: 24rpx;
	color: #999;
}

.teamitem .itemzz {
	display: flex;
	flex-direction: column;
	align-items: flex-end;
	/* margin: 0; */
}
.itemzzz {
	/* display: flex; */
	/* flex-direction: column; */
	align-items: center;
	margin: 0;
}
.yqsj {
	transform: translateY(40rpx);
}
.teamitem .itemzz text {
	font-size: 24rpx;
	color: #999;

}
.teamitem .itemzz text:nth-child(1) {
	margin-bottom: 20rpx;
}

.nodata {
	width: 100%;
	display: flex;
	flex-direction: column;
	align-items: center;
}

.nodata image {
	width: 400rpx;
}

.nodata text {
	font-size: 24rpx;
	color: #999;
	margin-top: 30rpx;
}