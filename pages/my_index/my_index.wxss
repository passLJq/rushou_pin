/* pages/my_index/my_index.wxss */
@import "../../common/iconfont.wxss";

page {
  background: #fff;
	padding-bottom: 20rpx;
}

.my_tou {
  height: 240rpx;
  display: flex;
  align-items: center;
  padding: 38rpx 52rpx;
  background:linear-gradient(180deg,rgba(254,51,75,1) 0%,rgba(255,114,130,1) 100%);
}

.my_tou image {
  width: 144rpx;
  height: 144rpx;
  border-radius: 50%;
  margin-right: 21rpx;
}

.my_tou .usMsg {
	height: 120rpx;
}
.my_tou .usMsg > text {
	font-size: 28rpx;
	font-weight: 400;
	color: #fff;
	margin-top: 25rpx;
}

.my_tou .usMsg .tuanz {
	font-size: 20rpx;
	color: #fff;
	background:rgba(195,26,46,1);
	border-radius:16rpx;
	padding: 6rpx 28rpx;
	border:2rpx solid rgba(255,134,149,1);
	line-height: 40rpx;

}
.my_tou .usMsg .tuanz::before {
	margin-right: 6rpx;
	/* font-size: 24rpx; */
}

.my_tou .usn {
  color: #fff;
  font-size: 36rpx;
	font-weight: 600;
	margin-right: 22rpx;
	overflow: hidden;text-overflow:ellipsis;white-space: nowrap;
	max-width: 440rpx;
}

.items {
  display: flex;
  align-items: center;
}

.my_ordertitle {
  background-color: #fff;
  justify-content: space-between;
  padding: 24rpx 30rpx 24rpx 30rpx;
}

.my_ordertitle text {
  font-size: 36rpx;
  font-weight: 700;
  color: #333;
}

.my_p1 {
  font-size: 28rpx;
  margin-right: 14rpx;
  color: #999;
}

.my_p1 i {
  margin-top: 2rpx;
}

.jihuabox {
  background: #fff;
  padding: 30rpx 30rpx;
}

.jihuabox .my-item image {
  width: 48rpx;
  height: 48rpx;
  margin: 0 auto;
  margin-bottom: 8rpx;
}

.my-item.itemimg image {
	width: 56rpx !important;
  height: 56rpx !important;
}

.jihuabox .my-item {
  width: 25%;
  font-size: 24rpx;
  text-align: center;
}

.order_box {
  margin: 0 20rpx;
  border-radius: 8px;
  overflow: hidden;
  margin-top: -40rpx;
  box-shadow: 0px 2px 20px 0px rgba(153, 153, 153, 0.15);
  margin-bottom: 20rpx;
}
.other_box,.act_oredr{
   margin: 0 20rpx;
    border-radius: 8px;
  overflow: hidden;
  box-shadow: 0px 2px 20px 0px rgba(153, 153, 153, 0.15);
  margin-bottom: 20rpx;
}
.other_li{
  padding: 24rpx 0 28rpx 0;
  text-align: center;
  width: 25%;
}
.other_li image{
  width: 48rpx;
  height: 48rpx;
  margin: 0 auto;
}
.other_li text{
  font-size: 24rpx;
}
.act_li{
  width: 33.3%;
  text-align: center;
  padding: 40rpx 0;
}
.act_li image{
  width:64rpx;
  height: 64rpx;
  margin: 0 auto;
}
.act_li text{
font-size: 24rpx;
}
.btnms{
  background: #fff;
  line-height:inherit;
  border-radius: 0;
  border: 1px solid #fff;
  color: #333
}
button::after {
  border: none
}

.order_box + .order_box {
	margin-top: 20rpx;
}

.numm {
	font-size: 34rpx;
	color: #333;
	font-weight:bold;
}

.line {
	width:654rpx;
	height:2rpx;
	background:rgba(246,246,250,1);
	margin: 0 auto;
}

.myping {
	display: flex;
	justify-content: space-between;
}

.mt_46 {
	margin-top: 46rpx !important;
}
.shouyibox{
 	display: flex;
	justify-content: space-between; 
  padding: 26rpx 32rpx;
}
