/* pages/orderdetail/orderdetail.wxss */
@import "../../common/font-awesome.wxss";
page{background-color: #F6F6FA;}
.marginBt10{margin-bottom: 20rpx; background-color: #fff;}
.order_type_top_container{height:200rpx;background:rgba(205,168,110,0.2); text-align: center; }
.order_type_bottom_container{height:178rpx;background:rgba(255,255,255,1);border-radius:32rpx 32rpx 0px 0px; position: relative; top: -40rpx;}
.arc_container{box-sizing: border-box;border-radius: 50%;width:44rpx;height:44rpx;border: 4rpx solid rgba(205,168,110,0.4);margin-right: 42rpx;}
.arc_container>text{display: block;width: 28rpx; height: 28rpx;border-radius: 50%; background-color: #CDA86E;box-sizing: border-box;}

.address_box{ background-color: #fff;}
.address_container{height: 88rpx; line-height: 88rpx;}
.address_content{width: 100%; height: 150rpx; padding-top: 20rpx; padding-bottom: 20rpx;}

/*商品详情  */
.bottom_border{ border-bottom: 1px solid #F6F6FA;}
.product_list{padding: 24rpx 0;}
.product_img_container{width: 148rpx; height: 148rpx; margin-right: 24rpx;}
.product_img_container>image{width: 148rpx; height: 148rpx;}
.container_other{height: 74rpx; line-height: 74rpx; text-align: right; border-bottom: 2rpx solid #F6F6FA;}
.topay,.cancle{display: inline-block; text-align: center; color: #CDA86E; margin-left: 20rpx; border: 2rpx solid #D7B98A; border-radius: 80rpx; width: 160rpx; height: 58rpx; line-height: 58rpx; font-size: 24rpx;}
.cancle{border-color: #999; color: #999;}

/*底部信息  */
.footer_container{background-color: #fff; margin-bottom: 60rpx; font-size: 26rpx; color: #999; padding: 20rpx 32rpx;}
.footer_container>view{line-height: 48rpx;}
.copy_btn{width: 120rpx; height: 50rpx; border: 2rpx solid #D8D8D8; border-radius: 30rpx; text-align: center; line-height: 50rpx;}

.linkman {
	text-overflow:ellipsis;white-space: nowrap;
	overflow: hidden;
	width: 160rpx;
}