/* pages/gblist/gblist.wxss */

.mark {
	width: 100%;
	position: fixed;
	top: 0;
	bottom: 0;
	left: 0;
	background-color: rgba(0,0,0,.3);
}

/* 拼团成员 */
.member {
  width: 750rpx;
  background-color: #fff;
  padding: 0 40rpx;
  /* margin-top: 20rpx; */
}
.member .member-item {
  width: 100%;
  height: 140rpx;
  align-items: center;
}
.member .member-item + .member-item {
  border-top: 1rpx solid #f6f6f6;
}
.member .member-item image {
  width: 96rpx;
  height: 96rpx;
  border-radius:50%;
  -webkit-border-radius:50%;
  margin-right: 20rpx;
}
.member .member-item view {
  height: 86rpx;
}
.member .member-item view text {
  font-size: 28rpx;
  max-width: 390rpx;
}
.member .member-item view text:nth-child(2) {
  font-size: 24rpx;
  color: #999
}
.member .member-item .btn {
  width: 160rpx;
  height: 60rpx;
  border-radius: 60rpx;
  -webkit-border-radius: 60rpx;
  font-size: 24rpx;
  text-align: center;
  line-height: 60rpx;
  color: #fff;
}

.sp {
	position: fixed;
	bottom: -100%;
	left: 0;
	transition: all .3s ease-out;
}

/* 拼团弹窗 */
.ptPop {
  width: 570rpx;
  border-radius: 16rpx;
  background-color: #fff;
  position: fixed;
  left: 90rpx;
  top: 50%;
  transform: translateY(-60%);
  z-index: 1001;
}
.ptPop > text {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-top: 48rpx;
}
.ptPop > .avatar {
  justify-content: space-around;
  width: 50%;
  margin: 30rpx 0;
}
.ptPop > .avatar image {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
}
.ptPop > .avatar .tuanzhang {
  width: 100rpx;
  height: 32rpx;
  font-size: 20rpx;
  color: #fff;
  position: absolute;
  left: 50%;
  bottom: -16rpx;
  transform: translateX(-50%);
  border-radius: 16rpx;
}
.ptPop > .btn {
  width: 480rpx;
  height: 72rpx;
  border-radius: 36rpx;
  color: #fff;
  font-size: 28rpx;
  font-weight: 600;
  margin-bottom: 20rpx;
}
